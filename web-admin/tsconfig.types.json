{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules/*", "types/*", "dist/*"],
  "references": [
    {
      "path": "../../lib/ts/gen/schemas"
    },
    {
      "path": "../../lib/ts/platform-client"
    },
    {
      "path": "../../lib/ts/utils"
    },
    {
      "path": "../../lib/ts/server"
    },
    {
      "path": "../../lib/ts/apollo-client-utils"
    },
    {
      "path": "../../lib/ts/common-ui"
    },
    {
      "path": "../../lib/ts/assets-core"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "isolatedModules": true,
    "declarationDir": "./.types",
    "noEmit": true,
    "pretty": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": ".tscache/tsconfig.types.tsbuildinfo"
  }
}

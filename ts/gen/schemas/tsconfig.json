{
  "include": [
    "./*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "./dist",
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "commonjs",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "./dist"
  }
}
